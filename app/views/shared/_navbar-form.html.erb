<%= simple_form_for(:user, url: session_path(:user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                wrapper_html: { class: 'form-group' },
                input_html: { autocomplete: "email", class: "form-control form-control-sm" } %>
    <%= f.input :password,
                required: false,
                wrapper_html: { class: 'form-group' },
                input_html: { autocomplete: "current-password", class: 'form-control form-control-sm' } %>
    <%= f.input :remember_me, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
